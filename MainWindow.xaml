<Window x:Class="DatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Calendar HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Name="cal" />
        <Button Content="Up" HorizontalAlignment="Left" Margin="306,285,0,0" VerticalAlignment="Top" Width="75" Click="upClick"/>
        <Button Content="Down" HorizontalAlignment="Left" Margin="306,310,0,0" VerticalAlignment="Top" Width="75" Click="downClick"/>
        <Button Content="Select" HorizontalAlignment="Left" Margin="411,295,0,0" VerticalAlignment="Top" Width="75" Click="select"/>
        <TextBlock HorizontalAlignment="Left" Margin="351,58,0,0" TextWrapping="Wrap" Text="Appointment" VerticalAlignment="Top" Width="382" Name="appt"/>
        <TextBox HorizontalAlignment="Left" Height="45" Margin="132,285,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="119" Name="timeo"/>

    </Grid>
</Window>
